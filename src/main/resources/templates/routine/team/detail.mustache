<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>루틴 상세 페이지</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
      * {
        box-sizing: border-box;
      }
      body {
        background-color: #f9f9f9;
        font-family: "Apple SD Gothic Neo", sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
      }
      .layout {
        display: flex;
        min-height: 100vh;
      }
      .sidebar {
        width: 265px;
        height: 100vh;
        background-color: #111;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: fixed;
        left: 0;
        top: 0;
        padding: 1rem;
      }
      .sidebar nav a {
        display: block;
        color: white;
        padding: 0.5rem 0;
        text-decoration: none;
      }
      .sidebar nav a:hover,
      .sidebar nav a.active {
        background-color: #2ecc71;
        border-radius: 0.5rem;
        padding-left: 1rem;
      }
      .sidebar .profile {
        border-top: 1px solid #444;
        padding-top: 1rem;
        margin-top: 2rem;
      }
      .profile img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 0.5rem;
      }
      .profile-dropdown {
        position: relative;
      }

      .profile-dropdown .dropdown-menu {
        position: absolute;
        bottom: 40px;
        background-color: #222;
        padding: 0.5rem;
        border-radius: 0.5rem;
        display: none;
      }
      .profile-dropdown:hover .dropdown-menu {
        display: block;
      }
      .profile-dropdown button {
        background: none;
        border: none;
        color: white;
        display: flex;
        align-items: center;
      }
      .friend-list {
        color: white;
        font-size: 14px;
      }
      .container {
        max-width: 100% !important;

        padding: 2rem;
        margin-left: 265px;
      }
      .image-preview-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        width: 220px;
      }

      #routinePreview {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border: 2px dashed #ccc;
        border-radius: 0.5rem;
        background-color: #f8f8f8;
      }
    </style>
  </head>
  <body>
    <div class="layout">
      {{> sidebar}}
      <main class="container my-4">
        <div class="card p-4 shadow-sm">
          <h4 class="mb-4 text-center">📝 루틴 상세 보기</h4>
          <div class="d-flex gap-4">
            <div class="image-preview-wrapper">
              <img src="/images/default.png" id="routinePreview" alt="루틴 이미지 미리보기" />
              <input type="file" class="form-control form-control-sm" id="imageInput" />
            </div>
            <div class="flex-grow-1">
              <div class="mb-3">
                <label for="routineTitle" class="form-label">루틴 제목</label>
                <input type="text" class="form-control" id="routineTitle" value="아침 스트레칭" />
              </div>
              <div class="mb-3">
                <label for="routineCategory" class="form-label">카테고리</label>
                <select class="form-select" id="routineCategory">
                  <option selected>운동</option>
                  <option>공부</option>
                  <option>식단</option>
                  <option>독서</option>
                  <option>자기개발</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="routineDate" class="form-label">날짜</label>
                <input type="date" class="form-control" id="routineDate" value="2025-04-03" />
              </div>
              <div class="mb-3">
                <label for="routineContent" class="form-label">루틴 내용</label>
                <textarea class="form-control" id="routineContent" rows="3">기상 후 10분 스트레칭</textarea>
              </div>
              <div class="mb-3">
                <label class="form-label">코멘트</label>
                <ul class="nav nav-pills mb-3" id="commentTabs" role="tablist">
                  <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="tab-private" data-bs-toggle="pill"
                            data-bs-target="#pane-private" type="button" role="tab">
                      내 코멘트
                    </button>
                  </li>
                  <li class="nav-item" role="presentation">
                    <button class="nav-link" id="tab-team" data-bs-toggle="pill"
                            data-bs-target="#pane-team" type="button" role="tab">
                      팀 피드백
                    </button>
                  </li>
                </ul>
                <div class="tab-content" id="commentTabContent">
                  <div class="tab-pane fade show active" id="pane-private" role="tabpanel" aria-labelledby="tab-private">
                    <div class="border rounded p-3" style="background-color: #fafafa;">
                      <p class="mb-1">기상 컨디션 좋음.<br>근육 뻐근함 거의 없음.</p>
                      <small class="text-muted">2025.04.03 09:12 작성됨</small>
                    </div>
                  </div>

                  <!-- 팀 피드백 탭 -->
                  <div class="tab-pane fade" id="pane-team" role="tabpanel" aria-labelledby="tab-team">
                    <div id="teamComposer" class="mb-3">
                      <textarea class="form-control mb-2" id="teamInput" rows="2" placeholder="팀원에게 남길 피드백..."></textarea>
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" id="teamNotify">
                          <label class="form-check-label" for="teamNotify">알림 보내기</label>
                        </div>
                        <button class="btn btn-sm btn-primary">등록</button>
                      </div>
                    </div>
                    <!-- 리스트 -->
                    <ul class="list-group" id="teamList">   
                      <li class="list-group-item text-muted text-center">아직 코멘트가 없습니다.</li>
                      <li class="list-group-item">
                        <div class="d-flex justify-content-between">
                          <strong>김팀원</strong>
                          <small class="text-muted">2025.04.03 09:30</small>
                        </div>
                        <div class="mt-1">오늘 자세 정말 좋았어요!<br>내일도 파이팅</div>
                      </li>
                      <li class="list-group-item">
                        <div class="d-flex justify-content-between">
                          <strong>박팀원</strong>
                          <small class="text-muted">2025.04.03 10:10</small>
                        </div>
                        <div class="mt-1">스트레칭 후 유산소 10분 추천드립니다!</div>
                      </li>
                    </ul>
                    <div class="d-grid mt-2">
                      <button class="btn btn-outline-secondary btn-sm">더 보기</button>
                    </div>
                  </div>
                </div>
              </div>
              <div class="text-end">
                <button class="btn btn-success" onclick="handleRoutineComplete()">루틴 완료</button>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- 코멘트 작성 모달 -->
    <div class="modal fade" id="commentModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">코멘트 작성</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <label for="commentText" class="form-label">오늘 루틴을 마친 소감을 남겨보세요!</label>
            <textarea class="form-control mb-3" id="commentText" rows="3" placeholder="예: 오늘 컨디션이 좋아서 수월했어요!"></textarea>
            <div class="d-grid">
              <button class="btn btn-success" onclick="handleCommentSave()">코멘트 저장</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 팀에게 코멘트 공유 알림 모달 -->
    <div class="modal fade" id="teamShareModal" tabindex="-1">
      <div class="modal-dialog modal-sm">
        <div class="modal-content text-center">
          <div class="modal-body">
            <p>이 코멘트를 팀에게도 공유할까요?</p>
            <div class="d-flex gap-2 justify-content-center">
              <button class="btn btn-outline-primary w-100" onclick="sendToTeam(true)">예</button>
              <button class="btn btn-outline-secondary w-100" onclick="sendToTeam(false)">아니오</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // 이미지 업로드 로직
      document.getElementById("imageInput").addEventListener("change", function (event) {
        const file = event.target.files[0];
        const preview = document.getElementById("routinePreview");

          if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
              preview.src = e.target.result;
              preview.style.display = "block";
            };
            reader.readAsDataURL(file);
          } else {
            preview.style.display = "none";
          }
        });

      // 코멘트 저장 로직
      let isTeamRoutine = false;
      let currentRoutineId = null;


      function handleRoutineComplete(isTeam, routineId) {
        isTeamRoutine = isTeam;
        currentRoutineId = routineId;

        new bootstrap.Modal(document.getElementById("commentModal")).show();
      }

      function handleCommentSave() {
        const comment = document.getElementById("commentText").value.trim();

        if (!comment) {
          alert("코멘트를 입력해주세요.");
          return;
        }

        bootstrap.Modal.getInstance(
          document.getElementById("commentModal")
        ).hide();

        if (isTeamRoutine) {
          new bootstrap.Modal(document.getElementById("teamShareModal")).show();
        } else {
          saveComment(comment, currentRoutineId, false);
        }
      }

      function sendToTeam(share) {
        const comment = document.getElementById("commentText").value;
        bootstrap.Modal.getInstance(
          document.getElementById("teamShareModal")
        ).hide();

        saveComment(comment, currentRoutineId, share);
      }

      function saveComment(content, routineId, shareToTeam) {
        console.log(" 저장됨:", { content, routineId, shareToTeam });
      }
    </script>
  </body>
</html>